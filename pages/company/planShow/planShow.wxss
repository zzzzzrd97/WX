/* 项目需求信息栏开始 */
.information-box{
  width: 100%;
  height: 528rpx;
  margin-top: 37rpx;
  font-weight: 700;
}
.information-list{
  width: 702rpx;
  height:100%;
  margin: 0 auto;
  box-shadow: 0px 1px 16px 0px 
		rgba(229, 229, 229, 0.75);
    padding: 48rpx 0 0 48rpx;
    box-sizing: border-box;
}
.info-title{
  width:100%;
  line-height:10rpx;
  font-size: 44rpx;
  color:#4a4c57;
  letter-spacing: 2rpx; 
  font-weight:800;
}
.lb{
  width: 75rpx;
  height:36rpx;
  background: #20c8bb;
  margin-top: 19rpx;
  border-radius: 18rpx;
  text-align:center;
  line-height:36rpx;
  font-size:22rpx;
  color: #fff;
}
.list-items{
  width: 100%;
  height: 218rpx;
  margin-top: 66rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.item{
  width: 100%;
  height:30rpx;
  position: relative;
}
.item-tag{
  width: 12rpx;
  height: 5rpx;
  border-radius: 50%;
   background: #fdab3e;
  position: absolute;
  top: 13rpx;
}
.item-container{
  width: 628rpx;
  height: 100%;
  margin-left: 26rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #a5a7af;
  letter-spacing: 1rpx;
}
.item-container-special{
  letter-spacing: 16rpx;
}
.item-text-special{
  color: #4a4c57;
}
/* 项目需求信息栏结束 */
/*需求描述开始*/
.requirement-box{
  width: 100%;
  height: 439rpx;
  margin-top: 64rpx;
}
.requirement-container{
  width: 617rpx;
  height: 100%;
  margin: 0 auto;
}
.requir-title{
  display: block;
  width: 100%;
  height: 10rpx;
  font-size: 28rpx;
  line-height: 10rpx;
  color: #a5a7af;
  margin-bottom: 14rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}
.requir-container{
  display: block;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  line-height: 36rpx;
  letter-spacing: 1rpx;
  color:#2c304c;
  opacity: 0.8;
  text-align: justify;
  font-weight: bold;
}
/*需求描述结束*/
/*底部开始*/
.footer{
  width: 100%;
  height: 56rpx;
   text-align: right;
}
.footer-container{
  width: 617rpx;
  height: 23rpx;
  margin: 0 auto;
   font-size: 24rpx;
   line-height: 23rpx;
   color: #4a4c57;
   letter-spacing: 1rpx;
   font-weight: bold;
}
.footer-date{
  height: 33rpx;
  padding-top: 4rpx;
  box-sizing: border-box;
  opacity: 0.6;
  font-size: 26rpx;
  letter-spacing: 0;
  line-height: 33rpx;
  font-weight: 400;
}
/*底部结束*/