/* pages/company/companyIndex/companyIndex.wxss */
@import "../../../css/iconfont.wxss";
/* 登录界面*/

/* 头部开始 */
.header{
  width:750rpx;
  height:506rpx;
}
.header>image{
  width:100%;
  height:100%;
}
.headImage{
  width:182rpx;
  height:182rpx;
  border-radius:50%;
  background-color:rgb(56,64,104);
  display: flex;
  justify-content: center;
  align-items:center;
  margin:0 auto;
  margin-top:-91rpx;
}
.headImage>image{
  width:166rpx;
  height:166rpx;
}
/* 头部结束 */

/* 内容开始 */
.container{
  width:702rpx;
  margin:0 auto;
  padding:0;
  margin-top:64rpx;
}
.containerBox{
  width:100%;
  height:90rpx;
  box-shadow: 0 1rpx 12rpx rgba(229,229,229,0.75);
  display: flex;
  align-items:center;
  margin-top:27rpx;
}
.containerBox>image{
  width:32rpx;
  height:36rpx;
  margin:0 45rpx;
}
.containerBox>input{
  width: 100%;
  height: 100%;
  font-size:26rpx;
  letter-spacing: 1rpx;
  font-weight:bolder;
}
/* 内容结束 */

/* 底部按钮开始 */
.footer{
  width:750rpx;
  margin-top:115rpx;
}
.footerBtn{
  width:702rpx;
  height:90rpx;
  margin:0 auto;
  border-radius:4rpx;
  background-color:rgb(56,64,104);
  color:#fff;
  font-size:32rpx;
  text-align:center;
  line-height:90rpx;
  font-weight:bolder;
  letter-spacing: 1rpx;
}
/* 底部按钮结束 */

/* 企业界面*/

/* 导航开始 */
.navBox{
  width: 100%;
  height: 252rpx;
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding:43rpx 66rpx 59rpx;
  background: white;
}
.navItem{
  display: block;
  width:148rpx;
  height:56rpx;
  background: #f8f8f8; 
  border-radius: 28rpx;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 56rpx;
  color: #9193a2;
}
.slip{
   width:2rpx;
  height:56rpx;
  font-size: 16rpx;
  line-height: 56rpx;
  color: #e9e9e9;
}
.navBox view.active{
  background: #ffac2d;
  color: #fff;
}
/* 导航结束 */
