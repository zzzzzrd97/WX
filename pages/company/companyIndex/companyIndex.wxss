  font-size: 44rpx;
  color: #4a4c57;
}
.text-title2{
  font-size: 28rpx;
  color: #a5a7af;
  margin-top: 47rpx;
}
.text-content{
  font-size: 24rpx;
  color: rgba(44,48,76,0.8);
  margin: 34rpx auto 90rpx;
}
.department{
  font-size: 24rpx;
  color: #4a4c57;
  font-weight: bold;
  text-align: right;
}
.btn-lookMore{
  width: 702rpx;
  height: 99rpx;
  background:#00c9bc;
  margin: 0 auto;
  font-size: 26rpx;
  text-align: center;
  line-height: 99rpx;
  color: #fff;
  border-radius: 10rpx;
}
/* 列表结束 */


